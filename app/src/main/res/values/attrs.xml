<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- TextCard: Text not editable with adaptative text size and text font-->
    <declare-styleable name="TextCard">
        <attr name="tFontName" format="string|reference" />
    </declare-styleable>

    <!-- EditCard: Text field editable with adaptative text size and text font-->
    <declare-styleable name="EditCard">
        <attr name="eFontName" format="string|reference" />
    </declare-styleable>
    <!-- CustomRadioButton: Radiobutton with adaptative text size and text font -->
    <declare-styleable name="CustomRadioButton">
        <attr name="rFontName" format="string|reference" />
    </declare-styleable>
    <!-- FontCustomizableButton: Button with adaptative text size and text font-->
    <declare-styleable name="CustomButton">
        <attr name="bFontName" format="string|reference" />
    </declare-styleable>
</resources>